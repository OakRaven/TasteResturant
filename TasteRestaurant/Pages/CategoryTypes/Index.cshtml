@page
@model TasteRestaurant.Pages.CategoryTypes.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Category Types</h2>
<br />
<p>
    <a asp-page="Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span>
        Create New
    </a>
</p>

<div class="form-border">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m.DefaultCategoryType.Name)</th>
            <th>@Html.DisplayNameFor(m => m.DefaultCategoryType.DisplayOrder)</th>
            <th></th>
        </tr>
        @foreach (var item in Model.CategoryTypes)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.DisplayOrder)</td>
                <td>
                    <partial name="_TableButtonsPartial" model="new SingleButtonPartial {  Id = item.Id }" />
                </td>
            </tr>
        }
    </table>
</div>

