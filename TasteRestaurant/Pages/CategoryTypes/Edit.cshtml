@page
@model TasteRestaurant.Pages.CategoryTypes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Category Type</h2>
<hr />

<form method="post">
    <input type="hidden" asp-for="CategoryType.Id" />
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="CategoryType.Name" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="CategoryType.Name" class="form-control" />
            </div>
            <span asp-validation-for="CategoryType.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="CategoryType.DisplayOrder" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="CategoryType.DisplayOrder" class="form-control" />
            </div>
            <span asp-validation-for="CategoryType.DisplayOrder" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-primary">Update</button>
            <a asp-page="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>

    </div>
</form>

